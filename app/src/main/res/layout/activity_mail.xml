<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    tools:context=".Mail">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp">

            <ImageView
                android:id="@+id/imgBulat"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/rounded_drawable_s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txtChar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textColor="#fff"
                android:textSize="35sp"
                app:layout_constraintTop_toTopOf="@id/imgBulat"
                app:layout_constraintLeft_toLeftOf="@id/imgBulat"
                app:layout_constraintRight_toRightOf="@id/imgBulat"
                app:layout_constraintBottom_toBottomOf="@id/imgBulat"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sam"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imgBulat"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekend Adventure"
                android:textSize="11sp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/txtNama"
                app:layout_constraintLeft_toRightOf="@id/imgBulat"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtIsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's go fishing"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/txtJudul"
                app:layout_constraintLeft_toRightOf="@id/imgBulat"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/txtJam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:42 AM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="7dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/txtJam"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="21dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>